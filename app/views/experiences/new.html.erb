<div class="wrapper">
  <div class="container">

   <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
     <h4> Hi <%= current_user.first_name %>, </h4>
     <h2> would you like to propose an activity? </h2>
     <h6> Let's go!</h2>
     <br>
     </div>
   </div>

   <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div id="create_new_proposal">

        <%= form_for(@experience) do |f| %>
         <div class="">
              <h4> Title</h4>
              <p> Give your activity a title [max 100 char.]</p>
          </div>
        <div class="">
        <%= f.text_field :title, placeholder: "what?", style: "width: 300px; height: 40px;"%>
        </div>

        <div class="">
            <h4> Description</h4>
            <p> What does your activity entail more exactly? </p>
        </div>
        <div class="">
        <%= f.text_area :description, placeholder: "what exactly?", style: "width: 300px; height: 150px;" %>
        </div>


          <div class="">
            <h4> url / link of event-page</h4>
        </div>
        <div class="">
        <%= f.text_field :url, style: "width: 300px; height: 40px;" %>
           </div>

        <div class="">
          <h4>Date with start time:</h4>
        </div>
        <div class="">
        <%= datetime_select(:experience, :startexperience, options = {min: Date.today}) %>
        </div>

        <div class="">
          <h4>(probable) end time:</h4>
        </div>
        <div class="">
          <%=f.time_select :stopexperience, :ignore_date => true %>
        </div>

        <div class="">
          <h4>Address</h4>
        </div>
          <div class="">
        <%= f.label :address %>
        <%= f.text_field :address, placeholder: "street & number?"%>
          </div>

        <div class="">
          <h4>City</h4>
        </div>
          <div class="">
        <%= f.label :city %>
        <%= f.text_field :city, placeholder: "where?"%>
          </div>

        <%= f.hidden_field :user_id %>
        <br>
        <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
 </div>
</div>


